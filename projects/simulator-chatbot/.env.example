VITE_DEEPSEEK_API_KEY=your_deepseek_api_key
VITE_DEEPSEEK_MODEL=deepseek-reasoner

# External mediation runtime endpoint (production-style API)
MEDIATION_API_BASE_URL=http://127.0.0.1:3100/api
# API key issued from Dashboard -> API Keys
MEDIATION_API_KEY=sk_staging_your_api_key
# Loopback auth mode for local simulator:
# - bootstrap (default): use VITE_MEDIATION_LOCAL_BOOTSTRAP_API_KEY
# - env_key: use MEDIATION_API_KEY (fallback to bootstrap when env key is empty)
# - anonymous: do not send Authorization header
VITE_MEDIATION_LOOPBACK_AUTH_MODE=bootstrap
# Backward compatibility switch (deprecated): set true to force env_key on loopback.
# VITE_MEDIATION_PREFER_ENV_KEY=true
# Local simulator stable bootstrap key (used when loopback auth mode is bootstrap).
VITE_MEDIATION_LOCAL_BOOTSTRAP_API_KEY=sk_staging_simulator_local_bootstrap_v1
# Optional: sandbox | staging | prod (default: staging)
MEDIATION_ENV=staging
# Optional: set false to temporarily disable next_step.intent_card flow (default true)
VITE_ENABLE_NEXT_STEP_FLOW=true

APP_ID=simulator-chatbot
PLACEMENT_ID=chat_inline_v1
